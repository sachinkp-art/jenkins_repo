pipeline {
    agent any

    stages {
        stage('Parallel Build & Test') {
            parallel {
                stage('Build Application') {
                    steps {
                        echo "Starting Build..."
                        sh '''
                            echo "Compiling application..."
                            sleep 5
                            echo "Build completed!"
                        '''
                    }
                }

                stage('Run Tests') {
                    steps {
                        echo "Starting Tests..."
                        sh '''
                            echo "Running unit tests..."
                            sleep 5
                            echo "Tests completed!"
                        '''
                    }
                }
            }
        }

        stage('Post Steps') {
            steps {
                echo "Build and Test stages completed in parallel!"
            }
        }
    }
}

    
